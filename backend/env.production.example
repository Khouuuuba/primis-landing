# ===========================================
# PRIMIS BACKEND - PRODUCTION ENVIRONMENT
# ===========================================
# Copy this to Railway's environment variables

# Database (Supabase)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres

# Stripe
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# RunPod
RUNPOD_API_KEY=YOUR_RUNPOD_API_KEY
RUNPOD_SDXL_ENDPOINT=YOUR_SDXL_ENDPOINT_ID

# Privy (for auth verification)
PRIVY_APP_ID=YOUR_PRIVY_APP_ID
PRIVY_APP_SECRET=YOUR_PRIVY_SECRET

# Solana (for yield distribution)
SOLANA_RPC_URL=https://api.devnet.solana.com
# For mainnet: https://api.mainnet-beta.solana.com

# Yield Scheduler
ENABLE_YIELD_SCHEDULER=true
YIELD_SCHEDULE=0 0 * * *

# Note: AUTHORITY_KEYPAIR_PATH requires file access
# For Railway, you'll need to base64 encode the keypair and use AUTHORITY_KEYPAIR_BASE64 instead
# AUTHORITY_KEYPAIR_BASE64=YOUR_BASE64_ENCODED_KEYPAIR

# Frontend URLs (for CORS)
FRONTEND_URL=https://app.primisprotocol.ai
